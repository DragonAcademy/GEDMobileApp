<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.gedappgui.gedappgui.Tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <Button
            android:id="@+id/fracdectool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fractions to Decimals"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="goTofracdectool"/>

        <Button
            android:id="@+id/slopeCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slope Calculator"
            android:onClick="goToSlopeCalculator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/FormMem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formula Memorization"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="goToFormulas" />

        <Button
            android:text="Geometry assist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/geoassist"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="goToGeoAssist"/>

        <Button
            android:text="Place values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/placevalues"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="goToPlaceValues"/>

        <Button
            android:text="Links Directory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/links"
            android:onClick="goToLinks"/>

        <Button
            android:text="Tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorial_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="goToTutorial"/>
    </LinearLayout>
</ScrollView>
