<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gedappgui.gedappgui.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/sprite_homeScreen"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:paddingBottom="@dimen/picture_padding"
        android:src="@drawable/layers"
        android:contentDescription="@string/sprite" />

    <TextView
        android:layout_height="200dp"
        android:layout_width="150dp"
        android:scaleType="center"
        android:id="@+id/sprite_speechBubble"
        android:layout_toRightOf="@id/sprite_homeScreen"
        android:background="@drawable/speech_bubble" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sprite_homeScreen"
        android:id="@+id/continue_button"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/continue_lesson"
        android:onClick="gotToContinueLesson" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sprite_homeScreen"
        android:id="@+id/achievements_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/achievements"
        android:onClick="gotToAchievements" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/continue_button"
        android:id="@+id/learn_button"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/learn"
        android:onClick="gotToLearn" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievements_button"
        android:id="@+id/tools_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/tools"
        android:onClick="gotToTools" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/learn_button"
        android:id="@+id/play_button"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/play"
        android:onClick="gotToPlay" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tools_button"
        android:id="@+id/settings_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/settings"
        android:onClick="gotToSettings" />
</RelativeLayout>
