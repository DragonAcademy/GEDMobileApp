<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gedappgui.gedappgui.Sprite">

    <ImageView
        android:id="@+id/sprite_spriteScreen"
        android:scaleType="fitCenter"
        android:paddingBottom="@dimen/picture_padding"
        android:src="@drawable/layers"
        android:contentDescription="@string/sprite"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Glasses"
        android:layout_height="wrap_content"
        android:layout_below="@id/sprite_spriteScreen"
        android:layout_alignLeft="@id/sprite_spriteScreen"
        android:layout_alignStart="@id/sprite_spriteScreen"
        android:id="@+id/sprite_glasses"
        android:layout_width="125dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="showGlasses"/>

    <Button
        android:text="Shirts"
        android:layout_height="wrap_content"
        android:id="@+id/sprite_shirts"
        android:layout_width="125dp"
        android:layout_below="@id/sprite_spriteScreen"
        android:layout_toRightOf="@id/sprite_glasses"
        android:layout_toEndOf="@id/sprite_glasses"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:onClick="showShirts"/>

    <Button
        android:text="Special"
        android:layout_height="wrap_content"
        android:id="@+id/sprite_special"
        android:layout_width="125dp"
        android:layout_below="@id/sprite_glasses"
        android:layout_alignLeft="@id/sprite_glasses"
        android:layout_alignStart="@id/sprite_glasses"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:onClick="showSpecial"/>

    <Button
        android:text="Hats"
        android:layout_height="wrap_content"
        android:id="@+id/sprite_hats"
        android:layout_width="125dp"
        android:layout_alignBaseline="@id/sprite_special"
        android:layout_alignBottom="@id/sprite_special"
        android:layout_toRightOf="@id/sprite_special"
        android:layout_toEndOf="@id/sprite_special"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:onClick="showHats" />

    <GridView
        android:id="@+id/sprite_gridView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sprite_hats"
        android:numColumns="3"
        android:gravity="center"
        android:verticalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:columnWidth="60dp"
        android:background="@color/colorMenuText">

    </GridView>

</RelativeLayout>
