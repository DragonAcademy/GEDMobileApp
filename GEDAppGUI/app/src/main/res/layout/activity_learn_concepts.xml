<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gedappgui.gedappgui.LearnConcepts">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/lesson"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:layout_marginBottom="@dimen/button_vert_margin"
        android:layout_marginTop="@dimen/button_vert_margin"
        android:text="@string/lesson"
        android:onClick="gotToLesson" />

    <ImageButton
        android:id="@+id/home"
        android:scaleType="centerCrop"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginRight="262dp"
        android:layout_marginEnd="262dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:onClick="goHome"
        app:srcCompat="@drawable/home_button"
        android:layout_row="8"
        android:layout_column="0"
        android:elevation="0dp" />

</GridLayout>
